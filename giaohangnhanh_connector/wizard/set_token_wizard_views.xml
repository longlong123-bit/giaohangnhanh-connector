<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="set_token_wizard_form_view" model="ir.ui.view">
        <field name="name">set.token.wizard.wizard.form.view</field>
        <field name="model">set.token.wizard</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_title">
                    <h1><field name="instance_id" force_save="1"/></h1>
                </div>
                <group>
                    <field name="token"/>
                </group>
                <footer>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                    <button string="Confirm" type="object" name="action_set_token" class="btn btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="set_token_wizard_action" model="ir.actions.act_window">
        <field name="name">Set token</field>
        <field name="res_model">set.token.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>