<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="giaohangnhanh_status_form_view" model="ir.ui.view">
        <field name="name">giaohangnhanh.status.form.view</field>
        <field name="model">giaohangnhanh.status</field>
        <field name="arch" type="xml">
            <form string="Status">
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="vi_name"/>
                        <field name="en_name"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                     <field name="message_follower_ids" widget="mail_followers"/>
                     <field name="message_ids" colspan="4" widget="mail_thread" nolabel="1"/>
                </div>
            </form>
        </field>
    </record>

    <record id="giaohangnhanh_status_tree_view" model="ir.ui.view">
        <field name="name">giaohangnhanh.status.tree.view</field>
        <field name="model">giaohangnhanh.status</field>
        <field name="arch" type="xml">
            <tree string="Status" export_xlsx="0" create="0" import="0">
                <field name="code"/>
                <field name="vi_name"/>
                <field name="en_name"/>
            </tree>
        </field>
    </record>

    <record id="giaohangnhanh_status_search_view" model="ir.ui.view">
        <field name="name">giaohangnhanh.status.search</field>
        <field name="model">giaohangnhanh.status</field>
        <field name="arch" type="xml">
            <search>
                <field name="code"/>
                <field name="vi_name"/>
                <field name="en_name"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="giaohangnhanh_status_action_view">
        <field name="name">Status</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">giaohangnhanh.status</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('giaohangnhanh_status_tree_view')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('giaohangnhanh_status_form_view')})]"/>
        <field name="search_view_id" ref="giaohangnhanh_status_search_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new status.
            </p>
        </field>
    </record>
</odoo>