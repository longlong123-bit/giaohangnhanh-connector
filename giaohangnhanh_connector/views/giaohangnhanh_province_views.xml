<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="giaohangnhanh_province_form_view" model="ir.ui.view">
        <field name="name">giaohangnhanh.province.form.view</field>
        <field name="model">giaohangnhanh.province</field>
        <field name="arch" type="xml">
            <form string="Province">
                <sheet>
                    <group>
                        <group>
                            <field name="cid"/>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="District" name="district">
                            <field name="district_ids">
                                <tree editable="bottom" create="0" edit="0">
                                    <field name="pid"/>
                                    <field name="name"/>
                                    <field name="did"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                     <field name="message_follower_ids" widget="mail_followers"/>
                     <field name="message_ids" colspan="4" widget="mail_thread" nolabel="1"/>
                </div>
            </form>
        </field>
    </record>

    <record id="giaohangnhanh_province_tree_view" model="ir.ui.view">
        <field name="name">giaohangnhanh.province.tree.view</field>
        <field name="model">giaohangnhanh.province</field>
        <field name="arch" type="xml">
            <tree string="Province" export_xlsx="0">
                <field name="cid"/>
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="giaohangnhanh_province_search_view" model="ir.ui.view">
        <field name="name">giaohangnhanh.province.search.view</field>
        <field name="model">giaohangnhanh.province</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="giaohangnhanh_province_action_view">
        <field name="name">Provinces</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">giaohangnhanh.province</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('giaohangnhanh_province_tree_view')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('giaohangnhanh_province_form_view')})]"/>
        <field name="search_view_id" ref="giaohangnhanh_province_search_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Province.
            </p>
        </field>
    </record>
</odoo>