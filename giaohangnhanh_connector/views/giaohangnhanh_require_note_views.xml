<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="giaohangnhanh_require_note_form_view" model="ir.ui.view">
        <field name="name">giaohangnhanh.require.note.form.view</field>
        <field name="model">giaohangnhanh.require.note</field>
        <field name="arch" type="xml">
            <form string="Required note" create="0" edit="0" import="0">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="giaohangnhanh_require_note_tree_view" model="ir.ui.view">
        <field name="name">giaohangnhanh.require.note.tree.view</field>
        <field name="model">giaohangnhanh.require.note</field>
        <field name="arch" type="xml">
            <tree string="Required note" export_xlsx="0" create="0">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="giaohangnhanh_require_note_search_view" model="ir.ui.view">
        <field name="name">giaohangnhanh.require.note.search</field>
        <field name="model">giaohangnhanh.require.note</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="giaohangnhanh_require_note_action_view">
        <field name="name">Required Note</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">giaohangnhanh.require.note</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('giaohangnhanh_require_note_tree_view')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('giaohangnhanh_require_note_form_view')})]"/>
        <field name="search_view_id" ref="giaohangnhanh_require_note_search_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new required note.
            </p>
        </field>
    </record>
</odoo>