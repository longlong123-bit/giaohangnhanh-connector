<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="ghn_service_form_view" model="ir.ui.view">
        <field name="name">ghn.service.form.view</field>
        <field name="model">ghn.service</field>
        <field name="arch" type="xml">
            <form string="Service" create="0" edit="0" import="0">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="type"/>
                        <field name="delivery_carrier_id" invisible="1"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                     <field name="message_follower_ids" widget="mail_followers"/>
                     <field name="message_ids" colspan="4" widget="mail_thread" nolabel="1"/>
                </div>
            </form>
        </field>
    </record>

    <record id="ghn_service_tree_view" model="ir.ui.view">
        <field name="name">ghn.service.tree.view</field>
        <field name="model">ghn.service</field>
        <field name="arch" type="xml">
            <tree string="Service" export_xlsx="0" create="0">
                <field name="name"/>
                <field name="code"/>
                <field name="type"/>
                <field name="delivery_carrier_id"/>
            </tree>
        </field>
    </record>

    <record id="ghn_service_search_view" model="ir.ui.view">
        <field name="name">ghn.service.search</field>
        <field name="model">ghn.service</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="type"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="ghn_service_action_view">
        <field name="name">Service</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ghn.service</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('ghn_service_tree_view')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('ghn_service_form_view')})]"/>
        <field name="search_view_id" ref="ghn_service_search_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new service.
            </p>
        </field>
    </record>
</odoo>